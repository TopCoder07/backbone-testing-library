{
  "name": "@closeio/backbone-testing-library",
  "version": "1.0.0",
  "description": "DOM testing utilities with API that mirrors React Testing Library",
  "author": "Lukáš Mladý <lukas@close.com>",
  "license": "MIT",
  "repository": "closeio/backbone-testing-library",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint:eslint": "eslint --config .eslintrc",
    "lint:eslint:fix": "eslint --config .eslintrc --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "prettify": "prettier --write src/**"
  },
  "peerDependencies": {
    "@testing-library/dom": ">=6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@testing-library/dom": ">=6.1.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "rollup": "^2.35.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4"
  },
  "files": [
    "dist"
  ]
}
